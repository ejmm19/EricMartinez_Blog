<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="ericmartinez_blog_post_listing_data_source" xsi:type="string">EricMartinez\Blog\Model\ResourceModel\Post\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <preference for="EricMartinez\Blog\Api\PostRepositoryInterface" type="EricMartinez\Blog\Model\PostRepository" />
    <preference for="EricMartinez\Blog\Api\Data\PostInterface" type="EricMartinez\Blog\Model\Post" />
    <preference for="EricMartinez\Blog\Api\Data\PostSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />

    <!-- Form DataProvider -->
    <virtualType name="EricMartinezBlogPostFormDataProvider" type="EricMartinez\Blog\Model\Post\DataProvider">
        <arguments>
            <argument name="collectionFactory" xsi:type="object" shared="false">EricMartinez\Blog\Model\ResourceModel\Post\CollectionFactory</argument>
            <argument name="imageUploader" xsi:type="object" shared="false">EricMartinez\Blog\Model\ImageUploader</argument>
            <argument name="filesystem" xsi:type="object" shared="false">Magento\Framework\Filesystem</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\Factory">
        <arguments>
            <argument name="dataProviders" xsi:type="array">
                <item name="ericmartinez_blog_post_form_data_source" xsi:type="string">EricMartinezBlogPostFormDataProvider</item>
            </argument>
        </arguments>
    </type>

</config>