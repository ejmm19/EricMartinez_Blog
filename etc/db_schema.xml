<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="ericmartinez_blog_post" resource="default" engine="innodb" comment="Blog Posts Table">
        <column xsi:type="int" name="post_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Post ID"/>
        <column xsi:type="varchar" name="title" length="255" nullable="false" comment="Post Title"/>
        <column xsi:type="varchar" name="url_key" length="255" nullable="true" comment="Post URL Key"/>
        <column xsi:type="text" name="content" nullable="false" comment="Post Content (supports WYSIWYG)"/>
        <column xsi:type="varchar" name="cover_image" length="255" nullable="true" comment="Cover Image Path"/>
        <column xsi:type="smallint" name="is_active" padding="5" unsigned="true" nullable="false" identity="false"
                default="1" comment="Is Post Active"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Customer ID"/>
        <column xsi:type="int" name="admin_user_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Admin User ID"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="ERICMARTINEZ_BLOG_POST_URL_KEY">
            <column name="url_key"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="ERICMARTINEZ_BLOG_POST_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="ericmartinez_blog_post" column="customer_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="ERICMARTINEZ_BLOG_POST_ADMIN_USER_ID_ADMIN_USER_USER_ID"
                    table="ericmartinez_blog_post" column="admin_user_id" referenceTable="admin_user"
                    referenceColumn="user_id" onDelete="CASCADE"/>
        <index referenceId="ERICMARTINEZ_BLOG_POST_TITLE" indexType="fulltext">
            <column name="title"/>
        </index>
    </table>
    <table name="ericmartinez_blog_comment" resource="default" engine="innodb" comment="Blog Post Comments Table">
        <column xsi:type="int" name="comment_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Comment ID"/>
        <column xsi:type="int" name="post_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Post ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Customer ID (if logged in)"/>
        <column xsi:type="varchar" name="guest_name" length="255" nullable="true" comment="Guest Name"/>
        <column xsi:type="varchar" name="guest_email" length="255" nullable="true" comment="Guest Email"/>
        <column xsi:type="text" name="content" nullable="false" comment="Comment Content"/>
        <column xsi:type="smallint" name="status" padding="5" unsigned="true" nullable="false" identity="false"
                default="0" comment="Status (0=Pending, 1=Approved, 2=Rejected)"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="comment_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="ERICMARTINEZ_BLOG_COMMENT_POST_ID_POST_POST_ID"
                    table="ericmartinez_blog_comment" column="post_id" referenceTable="ericmartinez_blog_post"
                    referenceColumn="post_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="ERICMARTINEZ_BLOG_COMMENT_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="ericmartinez_blog_comment" column="customer_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="SET NULL"/>
    </table>
</schema>